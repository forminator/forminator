{
  "name": "@forminator/jest-option",
  "version": "0.0.0",
  "files": [
    "src",
    "dist",
    "index.d.ts",
    "tsdoc-metadata.json"
  ],
  "license": "MIT",
  "type": "module",
  "typings": "./index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "pre-commit": "tsc && lint-staged && yarn lint",
    "lint": "eslint --max-warnings=0 src/**/*.{ts,tsx}",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "test": "jest --coverage --verbose",
    "build:dts": "api-extractor run --local --verbose && cat src/jest.d.ts >> index.d.ts && prettier --write index.d.ts",
    "build": "tsc && vite build && yarn build:dts",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7",
    "@types/jest": "^27",
    "@types/node": "^17",
    "eslint": "^8",
    "eslint-config-react-app": "^7",
    "jest": "^28",
    "lint-staged": "^12",
    "prettier": "^2",
    "ts-jest": "^28",
    "typescript": "^4",
    "vite": "^2",
    "vite-plugin-dts": "^1"
  },
  "dependencies": {
    "@forminator/option": "*"
  }
}
