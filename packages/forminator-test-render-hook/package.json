{
  "name": "@forminator/test-render-hook",
  "version": "0.1.0",
  "files": [
    "src",
    "dist",
    "index.d.ts",
    "tsdoc-metadata.json"
  ],
  "license": "MIT",
  "type": "module",
  "typings": "./index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "pre-commit": "tsc && lint-staged && pnpm lint",
    "lint": "eslint --max-warnings=0 src/**/*.{ts,tsx}",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "test": "jest --coverage --verbose",
    "build:dts": "api-extractor run --local --verbose && prettier --write index.d.ts",
    "build": "tsc && vite build && pnpm build:dts",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7",
    "@testing-library/dom": "^8",
    "@testing-library/jest-dom": "^5",
    "@testing-library/react": "^13",
    "@testing-library/user-event": "^14",
    "@types/jest": "^27",
    "@types/node": "^17",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^1",
    "eslint": "^8",
    "eslint-config-react-app": "^7",
    "jest": "^28",
    "jest-environment-jsdom": "^28",
    "lint-staged": "^12",
    "prettier": "^2",
    "react": "^18",
    "react-dom": "^18",
    "ts-jest": "^28",
    "typescript": "^4",
    "vite": "^2",
    "vite-plugin-dts": "^1"
  },
  "peerDependencies": {
    "@testing-library/react": "^13",
    "react": "^17",
    "react-dom": "^17"
  }
}
