{
  "name": "@forminator/core",
  "version": "0.0.0",
  "files": [
    "src",
    "dist",
    "index.d.ts",
    "tsdoc-metadata.json"
  ],
  "license": "MIT",
  "type": "module",
  "typings": "./index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "pre-commit": "tsc && lint-staged && pnpm run lint",
    "lint": "eslint --max-warnings=0 src/**/*.{ts,tsx}",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "test": "jest --coverage --verbose",
    "build:dts": "api-extractor run --local --verbose && prettier --write index.d.ts",
    "build": "tsc && vite build && pnpm run build:dts",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@forminator/jest-option": "*",
    "@microsoft/api-extractor": "^7",
    "@types/jest": "^28",
    "@types/node": "^18",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^2",
    "eslint": "^8",
    "eslint-config-react-app": "^7",
    "jest": "^28",
    "jest-environment-jsdom": "^28",
    "lint-staged": "^13",
    "prettier": "^2",
    "react": "^18",
    "react-dom": "^18",
    "ts-jest": "^28",
    "typescript": "^4",
    "vite": "^3",
    "vite-plugin-dts": "^1"
  },
  "peerDependencies": {
    "react": "^17",
    "react-dom": "^17"
  },
  "dependencies": {
    "@forminator/option": "*",
    "@forminator/react-wire": "^0.5.0"
  }
}
