{
  "name": "@forminator/core",
  "version": "0.0.0",
  "files": [
    "src",
    "dist",
    "index.d.ts",
    "tsdoc-metadata.json"
  ],
  "license": "MIT",
  "main": "./dist/forminator-core.umd.js",
  "module": "./dist/forminator-core.es.js",
  "typings": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/forminator-core.es.js",
      "require": "./dist/forminator-core.umd.js"
    }
  },
  "scripts": {
    "pre-commit": "tsc && lint-staged",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "test": "jest --coverage --verbose",
    "dev": "vite",
    "build:dts": "api-extractor run --local --verbose && prettier --write index.d.ts",
    "build": "tsc && vite build && yarn build:dts",
    "prepublishOnly": "yarn build",
    "serve": "vite preview"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7",
    "@testing-library/dom": "^8",
    "@testing-library/jest-dom": "^5",
    "@testing-library/react": "^12",
    "@testing-library/react-hooks": "^7",
    "@testing-library/user-event": "^13",
    "@types/jest": "^27",
    "@types/node": "^16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react": "^1.0.0",
    "jest": "^27",
    "lint-staged": "^12",
    "prettier": "^2",
    "react": "^17",
    "react-dom": "^17",
    "ts-jest": "^27",
    "typescript": "^4",
    "vite": "^2",
    "vite-plugin-dts": "^0.9"
  },
  "peerDependencies": {
    "react": "^17",
    "react-dom": "^17"
  }
}
