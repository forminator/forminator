{
  "name": "@forminator/core",
  "version": "0.0.0",
  "files": [
    "src",
    "dist",
    "index.d.ts",
    "tsdoc-metadata.json"
  ],
  "license": "MIT",
  "type": "module",
  "typings": "./index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "pre-commit": "tsc && lint-staged && yarn lint",
    "lint": "eslint --max-warnings=0 src/**/*.{ts,tsx}",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md}'",
    "test": "jest --coverage --verbose",
    "build:dts": "api-extractor run --local --verbose && prettier --write index.d.ts",
    "build": "tsc && vite build && yarn build:dts",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.24.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.16.0",
    "eslint-config-react-app": "^7.0.1",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-plugin-dts": "^1.1.1"
  },
  "peerDependencies": {
    "react": "^17",
    "react-dom": "^17"
  },
  "dependencies": {
    "@forminator/react-wire": "^0.5.0",
    "nanoid": "^3.3.4"
  }
}
