{
  "name": "forminator-project",
  "version": "0.1.0",
  "description": "mono repo of forminator-project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forminator/forminator.git"
  },
  "author": "smmoosavi",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "turbo": "^1.0.28"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".cache/**",
          "dist/**",
          "index.d.ts"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      }
    }
  },
  "scripts": {
    "prepare": "husky install"
  }
}
